@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<header>
    <div class="fullbg">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="logo">
                    Caneberra <br /> Restaurants
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="quote">
            <p class="text-banner">"One cannot think well, love well, sleep well if one has not dined well"</p>
            <p class="author">Virginia Woolf</p>
        </div>
    </div>
</header>
<div class="buffer">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            <h3 class="section-container">Welcome To</h3>
        </div>
    </div>

    <div class="welcome-to">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <div class="welcome">
                    <p class="header-text">Canberra Restaurant</p>
                    <p class="text">
                        At Canberra Restaurant, we provide an overview of restaurants within Canberra and allow you to find a meal
                        based on certain cuisine, a specific dish that you're after or yuo're just after a meal within a price range.
                    </p>
                    <p class="text">
                        We've got it all here for you. Just rolldown for further information.
                    </p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="side-img-left">
                </div>
            </div>
            <div class="col-md-2">
                <div class="side-img-right">
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>

<div class="highlight-event">
    <div class="fullbg">
        <div class="vertical-center">
            <div class="row">
                <div class="col-md-3 col-sm-3">
                    <h3 class="section-container"> Cuisine</h3>
                    <p>
                        The multicultural scociety in Canberra spoils the locals with such avast amount of flavours from around the world.
                    </p>
                    <p>
                        <a class="click-here">Click here</a> to find out more about the different cuisines availble.
                    </p>
                </div>
                <div class="col-md-3 col-sm-3">
                    <h3 class="section-container">Dishes</h3>
                    <p>
                        With the great amount of cuisines comes a great amount of dishes!
                    </p>
                    <p>
                        There are so many amazing dishes out there for you to try.
                    </p>
                    <p>
                        <a class="click-here">Click here</a> to look for a dish.
                    </p>
                </div>
                <div class="col-md-3 col-sm-3">
                    <h3 class="section-container">Price</h3>
                    <p>
                        Whether you're after a super cheap meal or want to treat yourself to something a little more fancy, Canberra has it all.
                    </p>
                    <p>
                        <a class="click-here">Click here</a> to see what's available in your price range.
                    </p>
                </div>
                <div class="col-md-3 col-sm-3">
                    <h3 class="section-container">Location</h3>
                    <p>
                        There might be a perfect meal waiting just around the corner from you. Check out your location page to find a restaurant near you!
                    </p>
                    <p>
                        <a class="click-here">Click here</a> to see what's available near you.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="buffer">
    <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6">
            <h3 class="section-container">Review</h3>
        </div>
    </div>

    <div class="review-to">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-2">
                <div class="side-img-left">
                </div>
            </div>
            <div class="col-md-2">
                <div class="side-img-right">
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <div class="review-right">
                    <p class="header-text">Can't make up your mind?</p>
                    <p class="text">
                        People from around Australia have already visited these restaurants and have given us their thoughts.
                    </p>
                    <p class="text">
                        Heat over to our <a class="review-a">Customer Review page</a> to find out more.
                    </p>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>

<div class="feature">
    <hr />
    <h3 class="section-container">Feature Restaurants</h3>
    <hr />
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/carousel/jamies_car.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption">
                <p class="carousel-text">Jamie's Italian</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel/itandsons_car.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption">
                <p class="carousel-text">Italian and Sons</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel/chairman_car.jpeg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption">
                <p class="carousel-text">The Chairman and Yip</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel/dicksonnoodle_car.jpeg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption">
                <p class="carousel-text">Dickson Noodle House</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel/bluginger_car.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption">
                <p class="carousel-text">Blue Ginger</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel/jewel_car.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption">
                <p class="carousel-text">Jewel of India</p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
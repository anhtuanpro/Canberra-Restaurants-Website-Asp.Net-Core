@model IEnumerable<CanberraRestaurants.Models.Review>

@{
    ViewData["Title"] = "Cusine";
}
<div class="header-otherpage">
    <div class="fullbg">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="logo-otherpages">
                    Caneberra <br /> Restaurants
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="page-name">
            <p class="author">Cuisine</p>
        </div>
    </div>
</div>

<div class="below-header">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="welcome">
                <p class="header-text">Tastes of the world</p>
                <p class="text">
                    Whether you're after the tastes of the Mediterranean or some oriental delights, the Canberra has the restaurants for you.
                </p>
                <p class="text">
                    Check out what's on offer by selecting a cuisine from the menu below.
                </p>
            </div>
        </div>
        <div class="col-md-2">
            <div class="side-img-left-altpage">
            </div>
        </div>
        <div class="col-md-2">
            <div class="side-img-right-altpage">
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>

<div class="restaurant-review">
    <div class="row">
        <div class="col-md-9">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse1">Italian</a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="row">
                                <div class="restaurant-panel-body">
                                    <div class="col-md-3">
                                        <img src="~/images/location/is_logo.gif" />
                                    </div>
                                    <div class="col-md-9">
                                        <p class="restaurant-header-text">
                                            Italian and Sons
                                        </p>
                                        <p class="restaurant-text">
                                            "A casual Italian trattoria that specialises in wood fired pizzas such as Rucoia with Proscuitto di Parma, rucola & reggiano.
                                            Don't miss daily changing main dishes of the day such as their wood roast suckling pig, rosemary, garlic, baked baby fennel
                                            & mustard fruids."- Australian good Food Guide <br /> <a class="click-here" href="http://italianandsons.com.au/" target="_blank">Click here</a> for the Italian and Sons website
                                            or <a class="click-here">Click here</a> for more information in Italia cuisine.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="restaurant-panel-body">
                                    <div class="col-md-3">
                                        <img src="~/images/location/jamie_logo.png" />
                                    </div>
                                    <div class="col-md-9">
                                        <p class="restaurant-header-text">
                                            Jamie's Italian
                                        </p>
                                        <p class="restaurant-text">
                                            "With prime position in Canberra Centre on Bunda Street, Jamie's Italian is the perfect place for a mid-shopping pit stop, or a buzzing
                                            evening out with beautiful room height windows and impressive lofty ceilings, the restaurant is full atmosphere" - Jamie's Italian website
                                            <br /> <a class="click-here" href="https://www.jamieoliver.com/italian/australia/" target="_blank">Click here</a> for the Jamie's Italian Canberra website or <a class="click-here">Click here</a> for more information in Italia cuisine.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse2">Asian</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="row">
                                <div class="restaurant-panel-body">
                                    <div class="col-md-3">
                                        <img src="~/images/location/chairman_logo.png" />
                                    </div>
                                    <div class="col-md-9">
                                        <p class="restaurant-header-text">
                                            Chairman & Yip
                                        </p>
                                        <p class="restaurant-text">
                                            "The Chariman & Yip has become one of Canberra's longest standing and most highly regarded institution,
                                            having received nummerous awards over the years, offering an over consistent and professional quality of
                                            service for corporate dining, conferences and presentations." - Chairman & Yip Website
                                            <br /> <a class="click-here" href="http://chairmangroup.com.au/chairmanyip/" target="_blank">Click here</a> for the Chairman & Yip website or
                                            <a class="click-here">Click here</a> for more information on Asian cuisine.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="restaurant-panel-body">
                                    <div class="col-md-3">
                                        <img src="~/images/location/noodle_logo.jpg" />
                                    </div>
                                    <div class="col-md-9">
                                        <p class="restaurant-header-text">
                                            Dickson Noodle House
                                        </p>
                                        <p class="restaurant-text">
                                            "The Dickson Asian Noodle House specialises in traditional Malaysian, Thai and Lao cuisine
                                            . The dining atmosphere is casual and cosy providing for a la carte dining, banquets and take away."
                                            - Vibe FM Website
                                            <br /> <a class="click-here" href="http://www.noodlehouse.net.au/Noodle_house/Welcome.html" target="_blank">Click here</a> for the Dickson Asian noodle House Facebook page
                                            or <a class="click-here">Click here</a> for more information on Asian cuisine.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse3">Indian</a>
                        </h4>
                    </div>
                    <div id="collapse3" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="row">
                                <div class="restaurant-panel-body">
                                    <div class="col-md-3">
                                        <img src="~/images/location/bluginger_logo.png" />
                                    </div>
                                    <div class="col-md-9">
                                        <p class="restaurant-header-text">
                                            Blu Ginger
                                        </p>
                                        <p class="restaurant-text">
                                            "In Blu Ginger we only use freshest locally sourced produce, compined with authentic
                                            spices imported directly from the sub-continent, to offer classic, traditional recipes
                                            with a modern twist, creating a unique and memorable dining for you. " - Blu Ginger Website
                                            <br /> <a class="click-here" href="http://www.bluginger.com.au/" target="_blank">Click here</a> for the Blu Ginger website
                                            or <a class="click-here">Click here</a> for more information on Indian cuisine.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="restaurant-panel-body">
                                    <div class="col-md-3">
                                        <img src="~/images/location/jewel_logo.jpg" />
                                    </div>
                                    <div class="col-md-9">
                                        <p class="restaurant-header-text">
                                            Jewel of India
                                        </p>
                                        <p class="restaurant-text">
                                            "Finding a balance between dishes inspired by authentic recipes and creating a modern
                                            take on classic cuisine sees a loyal following of Canberra locals returning for a
                                            mouth-watering feast." - Australian Good food Guide Website
                                            <br /> <a class="click-here" href="http://www.jewelofindia.com.au/" target="_blank">Click here</a> for the Jewel of Indian website
                                            or <a class="click-here">Click here</a> for more information on Indian cuisine.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="review-header">Reviews</div>
            <hr class="review-hr" />
            <div class="reviews">
                @if (Model.Count() > 1)
                {
                    var n = 2;
                    var position = Model.Count() - 2;
                    //var secondposition = Model.Count() - 1;
                    while (n > 0)
                    {

                        <h4 class="review-title">@Model.ElementAt(position).Heading</h4>
                        <div>
                            @{
                                var YellowStar = Model.ElementAt(position).Rating;
                                var BlackStar = 5 - YellowStar;
                                while (YellowStar > 0)
                                {
                                    <span class="yellow-star">&#x2605</span>
                                    YellowStar--;
                                }
                                while (BlackStar > 0)
                                {
                                    <span class="black-star">&#x2606</span>
                                    BlackStar--;
                                }
                            }
                        </div>
                        <h4 class="text">@Model.ElementAt(position).Restaurant</h4>
                        <p class="review">@Model.ElementAt(position).Comment</p>
                        <hr class="review-hr" />
                        // decrease n and increase position
                        n--;
                        position += 1;
                       }

                     }
                     else
                     {
                        @foreach (var item in Model)
                         {
                                        <h4 class="review-title">@Html.DisplayFor(modelItem => item.Heading)</h4>
                                        <div>
                                            @{
                                                var YellowStar = item.Rating;
                                                var BlackStar = 5 - YellowStar;
                                                while (YellowStar > 0)
                                                {
                                                    <span class="yellow-star">&#x2605</span>
                                                    YellowStar--;
                                                }
                                                while (BlackStar > 0)
                                                {
                                                    <span class="black-star">&#x2606</span>
                                                    BlackStar--;
                                                }
                                            }
                                        </div>
                                        <h4 class="text">@Html.DisplayFor(modelItem => item.Restaurant)</h4>
                                        <p class="review">@Html.DisplayFor(modelItem => item.Comment)</p>
                                        <hr class="review-hr" />
                           }
                        }
            </div>
        </div>
    </div>
</div>